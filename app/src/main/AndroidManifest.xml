        </activity>
        <activity android:name=".SpellingMainActivity"/>
        <activity android:name=".SpellingGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
            </intent-filter>
        </activity>
        <activity android:name=".SpellingSolnActivity"/>
        <activity android:name=".MathGameActivity"/>
        <activity android:name=".MathMainActivity"/>
        <activity android:name=".SpaceGameActivity"/>
        <activity android:name=".SpaceGameRules"/>
        <activity android:name=".AlphabetActivity"/>
        <activity android:name=".AlphabetCorrect"/>
        <activity android:name=".AlphabetWrong"/>

