    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SpellingMainActivity"/>
        <activity android:name=".SpellingGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
            </intent-filter>
        </activity>
        <activity android:name=".SpellingSolnActivity"/>
        <activity android:name=".MathGameActivity"/>
        <activity android:name=".MathMainActivity"/>
        <activity android:name=".SpaceGameActivity"/>
        <activity android:name=".SpaceGameRules"/>
        <activity android:name=".AlphabetActivity"/>

    </application>

</manifest>